{
  "name": "sdl2",
  "version": "2.0.10",
  "summary": "Simple DirectMedia Layer is a cross-platform development library designed to provide low level access to audio, keyboard, mouse, joystick, and graphics hardware via OpenGL and Direct3D.",
  "homepage": "http://zziplib.sourceforge.net",
  "description": "SDL_uikitappdelegate is not built with the framework therefore main is not automatically called.",
  "license": {
    "type": "ZLIB license",
    "file": "COPYING.txt"
  },
  "module_name": "SDL2",
  "authors": {
    "Sam Lantinga": "slouken@libsdl.org"
  },
  "source": {
    "http": "https://www.libsdl.org/release/SDL2-2.0.10.zip"
  },
  "requires_arc": true,
  "platforms": {
    "ios": "5.1"
  },
  "prepare_command": "mv SDL2-2.0.10/* . \nsed -i -E 's|#import \"SDL_uikitappdelegate.h\"|//#import \"SDL_uikitappdelegate.h\"|g' src/video/uikit/*.m",
  "source_files": [
    "src/thread/generic/SDL_syssem.c",
    "include/*.h",
    "src/**/*.{c,h,m}"
  ],
  "exclude_files": [
    "include/SDL_test*",
    "include/SDL_egl.h",
    "include/SDL_opengl_glext.h",
    "include/SDL_opengles2_gl2.h",
    "include/SDL_opengles2_gl2ext.h",
    "include/SDL_alsa_audio.h",
    "include/SDL_config_android.h",
    "include/SDL_config_macosx.h",
    "include/SDL_config_minimal.h",
    "include/SDL_config_pandora.h",
    "include/SDL_config_psp.h",
    "include/SDL_config_windows.h",
    "include/SDL_config_winrt.h",
    "include/SDL_config_wiz.h",
    "src/thread/pthread/SDL_syssem.c",
    "src/thread/generic/SDL_syscond.c",
    "src/thread/generic/SDL_sysmutex.c",
    "src/thread/generic/SDL_systhread.c",
    "src/thread/generic/SDL_systls.c",
    "src/**/android/*",
    "src/**/haiku/*",
    "src/**/darwin/*",
    "src/**/linux/*",
    "src/**/nacl/*",
    "src/**/pandora/*",
    "src/**/raspberry/*",
    "src/**/vivante/*",
    "src/**/windows/*",
    "src/**/psp/*",
    "src/**/wayland/*",
    "src/**/x11/*",
    "src/**/emscripten/*",
    "src/**/winrt/*",
    "src/**/direct3d/*",
    "src/**/direct3d11/*",
    "src/**/directfb/*",
    "src/**/mir/*",
    "src/**/alsa/*",
    "src/**/arts/*",
    "src/**/bsd/*",
    "src/video/cocoa/*",
    "src/**/directsound/*",
    "src/**/disk/*",
    "src/**/dsp/*",
    "src/**/esd/*",
    "src/**/fusionsound/*",
    "src/**/nas/*",
    "src/**/paudio/*",
    "src/**/qnx/*",
    "src/**/qsa/*",
    "src/**/pulseaudio/*",
    "src/**/sndio/*",
    "src/**/sun/*",
    "src/**/uikit/SDL_uikitappdelegate*",
    "src/**/winmm/*",
    "src/**/xaudio2/*",
    "src/main/dummy/SDL_dummy_main.c",
    "src/test/*",
    "src/hidapi/testgui/mac_support_cocoa.m"
  ],
  "private_header_files": [
    "src/video/uikit/SDL_*.h"
  ],
  "xcconfig": {
  },
  "compiler_flags": [
    "-I${PODS_ROOT}/src/libm"
  ],
  "frameworks": [
    "CoreAudio", "AudioToolbox", "GameController", "CoreMotion"
  ]
}
